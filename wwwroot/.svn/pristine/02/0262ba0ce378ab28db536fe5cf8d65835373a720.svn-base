// Media query variables.
@x-small-only: 		~"(max-width: 480px)";

@small-and-down:  	~"(max-width: 767px)";
@small-only:  		~"(min-width: 480px) and (max-width: 767px)";
@small-and-up: 		~"(min-width: 480px)";

@medium-and-down: 	~"(max-width: 979px)";
@medium-only: 		~"(min-width: 768px) and (max-width: 979px)";
@medium-and-up: 	~"(min-width: 768px)";

@large-and-down:  	~"(max-width: 1199px)";
@large-only:  		~"(min-width: 980px) and (max-width: 1199px)";
@large-and-up: 	~"(min-width: 980px)";

@x-large-only:    	~"(min-width: 1200px)";

//colors
@mygreen: #1b6270;
@mygreen-light: #7ea5ac;
@myred: #9d2023;
@myyellow: #d48721;//#FAA400
@myblack: #000000;
@mywhite: #ffffff;
@mydarkgrey: #333333;
@mylightgrey: #e3e3e3;
@mydarkgreen: #1A545B;

@primary:@mygreen;
@primary-lighten:@mygreen-light;
@accent:@mydarkgreen;
@accent2:@myyellow;
@borderbottom: @mylightgrey;

//font
@lato: 'Lato', sans-serif;

@bodyFont: @lato;

//media query helper classes
@media @x-small-only		{.hide-for-x-small-only{display: none;}}

@media @small-and-down		{.hide-for-small-and-down, .hide-for-small{display: none;}}
@media @small-only			{.hide-for-small-only{display: none;}}
@media @small-and-up		{.hide-for-small-and-up{display: none;}}

@media @medium-and-down	{.hide-for-medium-and-down{display: none;}}
@media @medium-only		{.hide-for-medium-only{display: none;}}
@media @medium-and-up		{.hide-for-medium-and-up{display: none;}}

@media @large-and-down		{.hide-for-large-and-down{display: none;}}
@media @large-only			{.hide-for-large-only{display: none;}}
@media @large-and-up		{.hide-for-large-and-up{display: none;}}

@media @x-large-only		{.hide-for-x-large-only{display: none;}}

// helper classes

.flush-left {
    margin-left: 0;
}
.flush-right {
    margin-right: 0;
}

//Image in content area responsive
.main-container img {
    .img-responsive();
}

