.btn{
  text-shadow: none;
  background: #f5f5f5;
  -webkit-box-shadow:none;
  -moz-box-shadow:none;
  box-shadow:none;
  border: 1px solid darken(#f5f5f5, 10%);
  &:hover, &:active, &:focus{
    background: darken(#f5f5f5, 10%);
    border: 1px solid #f5f5f5;
  }
}

.btn-primary{
  background: @primary;
  border: 1px solid darken(@primary, 10%);
  color: @white;
  &:hover, &:active, &:focus{
    background: darken(@primary, 10%);
    border: 1px solid @primary;
  }
}

.btn-accent{
  background: @accent;
  border: 1px solid darken(@accent, 7%);
  color: @white;
  &:hover, &:active, &:focus{
    background: darken(@accent, 7%);
    border: 1px solid @accent;
    color: @white;
  }
}
.btn-accent2{
  background: @myred;
  border: 2px solid #69151B;
  color: @white;
  border-radius: 0;
  padding: 4px 12px;
  &:hover, &:active, &:focus{
    background: darken(@myred, 4%);
    border: 2px solid #69151B;
    color: @white;
  }
}
.btn.nohover{
  background:none;
  background-color: #e6e6e6;
  color: #333333;
  outline:0;
  -webkit-box-shadow:inset 0 2px 4px rgba(0,0,0,.15), 0 1px 2px rgba(0,0,0,.05);
  -moz-box-shadow:inset 0 2px 4px rgba(0,0,0,.15), 0 1px 2px rgba(0,0,0,.05);
  box-shadow:inset 0 2px 4px rgba(0,0,0,.15), 0 1px 2px rgba(0,0,0,.05);
  &:hover{
    background:none;
    color: #333333;
    background-color: #e6e6e6;
    outline:0;
    -webkit-box-shadow:inset 0 2px 4px rgba(0,0,0,.15), 0 1px 2px rgba(0,0,0,.05);
    -moz-box-shadow:inset 0 2px 4px rgba(0,0,0,.15), 0 1px 2px rgba(0,0,0,.05);
    box-shadow:inset 0 2px 4px rgba(0,0,0,.15), 0 1px 2px rgba(0,0,0,.05);
  }
}
