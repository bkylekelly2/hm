.node-type-sns {
  .node-sns {
    .field-type-paragraphs {
      > .field-items {
        > .field-item {
          > .entity {
            margin-left: 0;
            overflow-wrap: break-word;
            padding: 5px 0;
          }
          > .paragraphs-item-text-box {
            margin: 10px 0;
            .field-item > p {
              padding: 30px 20px;
            }
          }
          > .paragraphs-item-text-box.col-sm-12 {
            > .content {
              background: url(/sites/all/themes/bootstrap_nhmrc/images/vector-smart-object.png) 20px 10px no-repeat;
              padding: 10px 20px 10px 160px;
            }
          }
          > .paragraphs-item-learn-more {
            margin: 20px 0;
            .content {
              background: url(/sites/all/themes/bootstrap_nhmrc/images/learn-more-copy.png) 10px 12px no-repeat;
              padding: 10px 40px 10px 90px;
            }
          }
          > .paragraphs-item-image {
            margin-bottom: 20px;
            img {
              width: 100%;
            }
          }
          > .paragraphs-item-lists {
            margin-bottom: 10px;
            ul {
              li {
                margin-bottom: 10px;
              }
            }
          }
          > .paragraphs-item-image-text {
            padding: 5px 15px;
            .content {
              height: 360px;
              background-color: #f1f4f9;
              overflow: hidden;
              &:hover{
                background-color: #1A545B;
                .field-name-field-text {
                  background-color: #1A545B;
                  //margin: -55px 20px 20px 20px;
                  h3 {
                    color: white;
                  }
                  p {
                    color: white;
                  }
                  a {
                    color: white;
                  }
                  ul {
                    li {
                      color: white;
                    }
                  }
                  .field-item {
                    color: white;
                  }
                }
              }
              .field-name-field-image {
                img {
                  width: 100%;
                }
              }
              .field-name-field-text {
                padding: 15px;
                margin: -55px 20px 20px 20px;
                background-color: #f1f4f9;
                position: relative;
                h3 {
                  font-size: 15px;
                  line-height: 1.5em;
                  margin: 0px;
                  color: #1A545B;
                  font-weight: 900;
                }
                a {
                  color: #1A545B;
                }
                @media @small-and-down{
                  margin: -19% 20px 20px 20px;
                }
              }
            }
          }
          > .paragraphs-item-image-title {
            padding: 5px 15px 5px 0px;
            .content {
              height: 260px;
              background-color: #f1f4f9;
              overflow: hidden;
              &:hover{
                background-color: #1A545B;
                .field-name-field-image-title {
                  background-color: #1A545B;
                  //margin: -55px 20px 20px 20px;
                  h3 {
                    color: white;
                  }
                  p {
                    color: white;
                  }
                  a {
                    color: white;
                  }
                  ul {
                    li {
                      color: white;
                    }
                  }
                  .field-item {
                    color: white;
                  }
                }
              }
              .field-name-field-image {
                img {
                  width: 100%;
                }
              }
              .field-name-field-image-title {
                padding: 15px;
                //margin: -55px 20px 20px 20px;
                background-color: #f1f4f9;
                position: relative;
                h3 {
                  font-size: 15px;
                  line-height: 1.5em;
                  margin: 0px;
                  color: #1A545B;
                  font-weight: 900;
                }
                a {
                  color: #1A545B;
                }
              }
              .field-name-field-link-to {
                display: none;
              }
            }
          }
          > .paragraphs-item-block {
            .field-name-field-title {
              font-size: 15px;
              margin: 0 0 10px;
              overflow: hidden;
              text-transform: uppercase;
              font-family: 'Raleway', sans-serif;
              font-weight: 700;
              color: #043246;
            }
          }
          > .paragraphs-item-regular-paragraph {
            .family-remember-section {
              background: url(/sites/all/themes/bootstrap_nhmrc/images/shape-2.png) 20px 10px no-repeat;
              padding: 10px 20px 10px 145px;
            }
          }
          .survey_btn_redesign {
            padding: 10px;
            span {
              bottom: 35%;
              color: #9d2023;
              text-transform: uppercase;
              font-weight: 600;
              margin: 10px;
              font-size: 1.1em;
            }
          }
          > .entity-paragraphs-item.pull-right {
            @media @small-and-down{
              width: 100%;
            }
          }
        }
      }
    }
    footer {
      display: none;
    }
  }
}

.font-bold-text {
  font-weight: 800;
  font-size: 20px;
  line-height: 1.2em;
}