.node-type-resource {
  .main-container {
    section.col-sm-12 {
      .page-header {
        width: 80%;
      }
      .node-resource {
        .field {
          margin: 10px 0;
          .field-item {
            line-height: 1.7;
            font-weight: 400;
          }
        }
        div.field-name-field-resource-pdf-url {
          padding-bottom: 9px;
          margin: 20px 0 20px;
          border-bottom: 1px solid #eee;
          .field-item:after {
            content: " ";
            background-image: url(/sites/all/themes/bootstrap_nhmrc/images/icon-pdf.png);
            background-repeat: no-repeat;
            width: 26px;
            height: 33px;
            z-index: 11;
            background-size: 26px 33px;
            background-position: -100% 50%;
            position: absolute;
          }
          a {
            line-height: 33px;
            margin-right: 5px;
          }
        }
        div.field-name-field-resource-personal-author {
          .field-item {
            display: inline-block;
            margin: 0 5px;
          }
        }
        div.field-name-field-resource-document-type {
          .field-item {
            font-weight: bold;
          }
        }
        div.field-name-field-resource-doc-type {
          .field-item {
            font-weight: bold;
          }
        }
        div.field-name-field-ressource-keywords,
        div.field-name-field-ressource-keywords-2 {
          border: 2px solid #D5D5D5;
          background-color: #EFEFEF;
          padding: 15px 20px;
          .field-item {
            display: inline-block;
            border: 1px solid #D5D5D5;
            padding: 1px 8px;
            margin: 5px 5px 5px 0;
            background-color: #1E6D7C;
            border-radius: 3px;
            a {
              text-decoration: none;
              font-weight: 400;
              color: white;
            }
          }
          .field-label {
            color: #0B343A;
          }
        }
        div.field-name-field-resource-abstract {
          border-top: 1px solid #eee;
          padding-top: 25px;
        }
        div.field-name-field-youtube {
          margin-top: 20px;
          .field-item:after {
            content: " ";
            background-image: url(/sites/all/themes/bootstrap_nhmrc/images/resource-video-player.png);
            background-repeat: no-repeat;
            width: 33px;
            height: 33px;
            z-index: 11;
            background-size: 33px 33px;
            background-position: -100% 50%;
            position: absolute;
          }
          a {
            line-height: 33px;
            margin-right: 5px;
          }
          .modal {
            //border-radius: 4px;
            margin-left: auto;
            margin-right: auto;
            //margin-left: -400px;
            width: 840px;
            //height: 600px;
            .modal-header {
              background-color: #fff;
              border-top-left-radius: 4px;
              border-top-right-radius: 4px;
              margin-top: 10%;
              h3 {
                //color: #9d2023;
              }
            }
            .modal-body {
              padding:0;
              height: 600px;
              max-height: 600px;
              .youtube-container--responsive {
                height: 600px;
              }
            }
          }
        }
      }
      #block-views-resource-recommendation-block {
        border: 1px solid #eee;
        padding: 30px 10px 10px 30px;
        .view-resource-recommendation {
          .views-row {
            margin: 0px 0px 10px 15px;
            a {
              color: @myred;
              margin-left: 18px;
            }
            .field-content:before {
              content: " ";
              background-image: url(/sites/all/themes/bootstrap_nhmrc/images/resource-bullet.png);
              background-repeat: no-repeat;
              width: 13px;
              height: 23px;
              z-index: 11;
              background-size: 12px 15px;
              background-position: -100% 50%;
              position: absolute;
            }
          }
        }
      }
      #block-boxes-healthy-dating-widget {
        p {
          a {
            background-color: #9d2023;
            color: #fff;
            display: block;
            font-weight: 300;
            padding: 0.5em 0;
            text-align: center;
            width: 100%;
          }
        }
      }
      .views-field-current-path {
        a {
          color: transparent;
          display: block;
          height: 44px;
          width: 120px;
          margin-top: 10px;
          margin-bottom: 10px;
        }
        a::before {
          color: #9d2023;
          border-right: 18px solid;
          border-top: 22px solid transparent;
          border-bottom: 22px solid transparent;
          display: inline-block;
          content: '';
          position: absolute;
          left: 7px;
        }
        a::after {
          color: white;
          background-color: #9d2023;
          line-height: 44px;
          width: 120px;
          height: 44px;
          display: inline-block;
          content: 'Back to Search';
          text-align: center;
          position: absolute;
          left: 25px;
        }
      }
    }
  }
  &.healthy-dating {
    .views-field-current-path {
      a::after {
        content: 'Back to Special Collection' !important;
        width: 190px !important;
      }
    }
    .field-name-field-ressource-keywords {
      display: none;
    }
  }
}