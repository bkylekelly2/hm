/*-----  Border Bottom  ------*/
.border-bottom{
    margin-bottom: 20px;
    padding-bottom: 20px;
    border-bottom: 3px solid @borderbottom;
}


/*-----  Separator Bottom  ------*/
.separator-bottom{
    margin-bottom: 20px;
    padding-bottom: 20px;
}


/*-----  transition  ------*/

.transition (@transition) {
    -webkit-transition: @transition;  
    -moz-transition:    @transition;
    -ms-transition:     @transition; 
    -o-transition:      @transition;  
}